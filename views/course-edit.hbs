<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" step="any" class="validate" value="{{course.price}}" required>
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input id="image" name="image" type="text" class="validate" value="{{course.image}}" required>
    <label for="image">Image url</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>
  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn btn-primary" type="submit">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{ course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn red">Remove course</button>
</form>