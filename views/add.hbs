<h1>Add new course</h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value={{data.title}}>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" step="any" class="validate" required value={{data.price}}>
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input id="image" name="image" type="text" class="validate" required value={{data.image}}>
    <label for="image">Image url</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn btn-primary" >Add course</button>
</form>